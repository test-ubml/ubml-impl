<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>org.openatom.ubml</groupId>
    <artifactId>ubml-all</artifactId>
    <version>0.9.0-SNAPSHOT</version>

    <dependencies>
        <!-- UBML  Common-->
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- 元模型公共组件Common-->
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-common-definition</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-common-runtime-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-common-runtime-spi</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-common-runtime-repo</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-common-runtime-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-common-engine</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-common-generator</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- 元模型框架Framework-->
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-framework-devtime-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-framework-devtime-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-framework-runtime-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-framework-runtime-spi</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-framework-runtime-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!-- 外部服务ExternalAPI-->
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-externalapi-definition</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-externalapi-devtime-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-externalapi-devtime-spi</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-externalapi-devtime-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-externalapi-runtime-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-externalapi-runtime-spi</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-externalapi-runtime-core</artifactId>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.openatom.ubml</groupId>
            <artifactId>ubml-model-externalapi-extension</artifactId>
            <version>${project.version}</version>
        </dependency>
        <!--3rd-->
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.openatom.ubml</groupId>
                <artifactId>ubml-bom</artifactId>
                <version>${project.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <createSourcesJar>true</createSourcesJar>
                            <promoteTransitiveDependencies>false</promoteTransitiveDependencies>
                            <keepDependenciesWithProvidedScope>false</keepDependenciesWithProvidedScope>
                            <createDependencyReducedPom>true</createDependencyReducedPom>
                            <artifactSet>
                                <includes>
                                    <include>org.openatom.ubml:ubml-common</include>
                                    <include>org.openatom.ubml:ubml-meta-metamodel-api</include>
                                    <include>org.openatom.ubml:ubml-meta-metamodel-core</include>
                                    <include>org.openatom.ubml:ubml-meta-metamodel-spi</include>
                                    <include>org.openatom.ubml:ubml-model-common-definition</include>
                                    <include>org.openatom.ubml:ubml-model-externalapi-definition</include>
                                    <include>org.openatom.ubml:ubml-model-externalapi-dev-api</include>
                                    <include>org.openatom.ubml:ubml-model-externalapi-devtime-api</include>
                                    <include>org.openatom.ubml:ubml-model-externalapi-devtime-core</include>
                                    <include>org.openatom.ubml:ubml-model-externalapi-devtime-spi</include>
                                    <include>org.openatom.ubml:ubml-model-externalapi-runtime-api</include>
                                    <include>org.openatom.ubml:ubml-model-externalapi-runtime-core</include>
                                    <include>org.openatom.ubml:ubml-model-externalapi-runtime-spi</include>
                                    <include>org.openatom.ubml:ubml-model-externalapi-generator</include>
                                    <include>org.openatom.ubml:ubml-model-externalapi-extension</include>
                                    <include>org.openatom.ubml:ubml-model-framework-common</include>
                                    <include>org.openatom.ubml:ubml-model-framework-dev-api</include>
                                    <include>org.openatom.ubml:ubml-model-framework-dev-core</include>
                                    <include>org.openatom.ubml:ubml-model-framework-dev-spi</include>
                                    <include>org.openatom.ubml:ubml-model-framework-runtime-api</include>
                                    <include>org.openatom.ubml:ubml-model-framework-runtime-core</include>
                                    <include>org.openatom.ubml:ubml-model-framework-runtime-spi</include>
                                </includes>
                            </artifactSet>
                            <transformers>
                                <!-- META-INF/services -->
                                <transformer
                                    implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
                                <!-- spring相关 -->
                                <transformer
                                    implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/spring.handlers</resource>
                                </transformer>
                                <transformer
                                    implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
                                    <resource>META-INF/spring.schemas</resource>
                                </transformer>
                            </transformers>
                            <!-- filters暂时未用到-->
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>file.conf</exclude>
                                        <exclude>registry.conf</exclude>
                                    </excludes>
                                </filter>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/maven/**</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>